<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.singh.shekhar.touch.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@android:color/white"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="#FF2979C8" />
    </LinearLayout>

    <Button
        android:id="@+id/single_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="single"
        android:text="Single Player"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/multi_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_player_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="multiplayer"
        android:text="MutiPlayer"
        android:textColor="@android:color/white"
        android:textSize="25dp" />
    <Button
        android:id="@+id/high_score_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multi_player_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="highscoreac"
        android:text="High Score"
        android:textColor="@android:color/white"
        android:textSize="25dp" />
</RelativeLayout>
